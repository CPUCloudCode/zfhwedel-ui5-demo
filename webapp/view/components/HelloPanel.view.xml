<mvc:View
   controllerName="zfhwedel.salesFreestyle.zfhwedelui5demo.controller.components.HelloPanel"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Panel
                id="helloWorldPanel"
                headerText="{i18n>helloPanelTitle}"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <Button
                    id="helloWorldButton"
                    text="{i18n>showHelloButtonText}"
                    press=".onShowHello"
                    class="sapUiSmallMarginEnd"
                />
                <Input
                    id="helloWorldInput"
                    value="{/recipient/name}"
                    valueLiveUpdate="true"
                    width="60%"
                />
                <Text
                    id="helloWorldText"
                    text="Hello {/recipient/name}"
                    class="sapUiSmallMargin"
                />
            </Panel>
</mvc:View>