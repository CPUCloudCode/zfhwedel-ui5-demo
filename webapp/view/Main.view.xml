<mvc:View
    controllerName="zfhwedel.salesFreestyle.zfhwedelui5demo.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Panel
                id="helloWorldPanel"
                headerText="{i18n>helloPanelTitle}"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <Button
                    id="helloWorldButton"
                    text="{i18n>showHelloButtonText}"
                    press=".onShowHello"
                    class="sapUiSmallMarginEnd"
                />
                <Input
                    id="helloWorldInput"
                    value="{/recipient/name}"
                    valueLiveUpdate="true"
                    width="60%"
                />
                <Text
                    id="helloWorldText"
                    text="Hello {/recipient/name}"
                    class="sapUiSmallMargin"
                />
            </Panel>

            <Panel
                id="salesDocsPanel"
                headerText="{i18n>salesDocsTitle}"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <List
                    id="salesDocsList"
                    headerText="{i18n>salesDocsListTitle}"
                    items="{salesDocs>/SalesDoc}"
                >
                    <items>
                        <ObjectListItem
                            id="listItem"
                            title="{salesDocs>SalesDoc}. {salesDocs>SalesDocType}"
                            number="{
                                parts: [
                                    'salesDocs>SalesDocNetValue',
                                    'salesDocs>SalesDocNetValueCurrency'
                                ],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false
                                }
                            }"
                            numberUnit="{salesDocs>SalesDocNetValueCurrency}"/>
                    </items>
                </List>
            </Panel>
        </content>
    </Page>
</mvc:View>
